<button type="button" {{on "click" this.toggleMove}}>Move</button>

<AnimationContext @use={{this.sequence}}>
  <div
    {{sprite id="foo1"}}
    style="width: 50px; height: 50px; background: red; margin-left: {{this.leftPosition}};"
  ></div>
</AnimationContext>

<br />

<AnimationContext @use={{this.parallel}}>
  <div
    {{sprite id="foo2"}}
    style="width: 50px; height: 50px; background: red; margin-left: {{this.leftPosition}};"
  ></div>
</AnimationContext>