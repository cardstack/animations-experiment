{{! template-lint-disable no-invalid-interactive}}
<div
  {{on "click" this.handleClick}}
  class="card"
  {{sprite id=@identifier role="card"}}
  ...attributes
>
  {{#if (has-block)}}
    <div
      class="content"
      {{sprite role="card-content" id=(concat @identifier "-content")}}
    >
      {{yield}}
    </div>
  {{/if}}

  <footer class="footer"></footer>
</div>
<style>
  .card {
    background: orange;
    border-radius: 15px;
    display: flex;
    flex-direction: column;
    border: 2px solid black;
    overflow: hidden;
    position: relative;
  }

  .content {
    padding: 40px 50px;
    color: #fff;
  }

  .content p {
    font-size: 16px;
  }

  .footer {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 50px;
    background: white;
  }
</style>