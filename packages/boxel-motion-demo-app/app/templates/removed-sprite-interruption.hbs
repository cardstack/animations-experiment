<div local-class="container">
  <AnimationContext
    @use={{this.transition}}
    @id="double-render-demo"
    local-class="double-render"
  >
    {{#if this.isShowing}}
      <div {{sprite id="item"}} local-class="sprite">
        Item
      </div>
    {{/if}}
    <div local-class="count">
      {{this.count}}
    </div>
  </AnimationContext>
  <div local-class="buttons">
    <button type="button" {{on "click" this.increment}} local-class="button">
      Increment
    </button>
    <button type="button" {{on "click" this.hide}} local-class="button">
      Remove
    </button>
    <button type="button" {{on "click" this.show}} local-class="button">
      Insert
    </button>
  </div>
</div>