<HomeRenoV2::Card
  @state={{@state}}
  @title="OUTLINE"
  @id={{@id}}
  @minimize={{fn @minimize @card}}
  @maximize={{fn @maximize @card}}
  @expand={{fn @expand @card}}
>
  {{#if (eq @state "MIN")}}
  {{else if (eq @state "MAX")}}
      <ul local-class="list">
        <li>
          <h2 local-class="list-heading">
            Checklist
          </h2>
          <ol local-class="list indented">
            <li>
              One
            </li>
            <li>
              Two
            </li>
            <li>
              Three
            </li>
          </ol>
        </li>
        <li>
          <h2 local-class="list-heading">
            Checklist 2
          </h2>
          <ol local-class="list indented">
            <li>
              One
            </li>
            <li>
              Two
            </li>
            <li>
              Three
            </li>
          </ol>
        </li>
      </ul>
      <AnimationContext @use={{this.transition}}>
        <ul local-class="suggestion-list">
          {{#each @suggestions as |suggestion|}}
            <li>
              {{#if (eq suggestion.state "MAX")}}
                <HomeRenoV2::Placeholder @id={{suggestion.id}} />
              {{else}}
                {{component
                  (concat "home-reno-v2/" suggestion.type)
                    card=suggestion
                    model=suggestion.model
                    state=suggestion.state
                    id=suggestion.id
                    suggestions=suggestion.suggestions
                    canUpdateState=suggestion.canUpdateState
                    minimize=@minimize
                    maximize=@maximize
                    expand=@expand
                }}
              {{/if}}
            </li>
          {{/each}}
        </ul>
      </AnimationContext>
  {{else if (eq @state "EXPANDED")}}
      <div>
        Lists of things
      </div>
  {{/if}}
</HomeRenoV2::Card>