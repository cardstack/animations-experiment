<HomeRenoV2::Card
  @state={{@state}}
  @title="GALLERY"
  @id={{@id}}
  @minimize={{fn @minimize @card}}
  @maximize={{fn @maximize @card}}
  @expand={{fn @expand @card}}
>
  {{#if (or (eq @state "MIN") (eq @state "EXPANDED"))}}
      <ul local-class={{concat "image-list " @state}}>
          {{#each @model.images as |image index|}}
            <li local-class="image-list-item" {{sprite id=(concat @id "-image-" index) role="image"}}>
                <img local-class="image" src={{image.path}} alt={{image.attribution}} title={{image.attribution}}>
            </li>
          {{/each}}
      </ul>
  {{else if (eq @state "MAX")}}
      <ul local-class={{concat "image-list " @state}}>
          {{#each @model.images as |image index|}}
            <li local-class="image-list-item" {{sprite id=(concat @id "-image-" index) role="image"}}>
                <img local-class="image" src={{image.path}} alt={{image.attribution}} title={{image.attribution}}>
            </li>
          {{/each}}
      </ul>
      <AnimationContext @use={{this.transition}}>
        <ul local-class="suggestion-list">
          {{#each @suggestions as |suggestion|}}
            <li>
              {{#if (eq suggestion.state "MAX")}}
                <HomeRenoV2::Placeholder @id={{suggestion.id}} />
              {{else}}
                {{component
                  (concat "home-reno-v2/" suggestion.type)
                    card=suggestion
                    model=suggestion.model
                    state=suggestion.state
                    id=suggestion.id
                    suggestions=suggestion.suggestions
                    canUpdateState=suggestion.canUpdateState
                    minimize=@minimize
                    maximize=@maximize
                    expand=@expand
                }}
              {{/if}}
            </li>
          {{/each}}
        </ul>
      </AnimationContext>
  {{/if}}
</HomeRenoV2::Card>