<div
  local-class={{concat "Accordion" (if this.isFocused " focus" "")}}
  {{on "focusin" this.handleFocusin}}
  {{on "focusout" this.handleFocusout}}
>
  {{#each this.items as |item|}}
    <Accordion::Panel
      @id={{item.id}}
      @title={{item.title}}
      @expanded={{eq this.currentItem item.id}}
      @trigger={{this.handleTrigger}}
    />
  {{/each}}
</div>