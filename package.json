{
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/cardstack/boxel-motion"
  },
  "scripts": {
    "deploy:boxel-host": "cd packages/host && NODE_OPTIONS='--max_old_space_size=4096' pnpm exec ember deploy",
    "deploy:boxel-host:preview-staging": "cd packages/host && NODE_OPTIONS='--max_old_space_size=4096' pnpm exec ember deploy s3-preview-staging --verbose",
    "deploy:boxel-host:preview-production": "cd packages/host && NODE_OPTIONS='--max_old_space_size=4096' pnpm exec ember deploy s3-preview-production --verbose",
    "lint": "pnpm run --filter './packages/**' --if-present -r lint",
    "lint:fix": "pnpm run --filter './packages/**' --if-present -r lint:fix"
  },
  "pnpm": {
    "overrides": {
      "@types/eslint": "8.4.1",
      "jsesc": "^3.0.0",
      "ember-concurrency": "2.2.1"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "mustache": "3"
      }
    },
    "patchedDependencies": {
      "magic-string@0.25.9": "patches/magic-string@0.25.9.patch",
      "fastboot@4.1.0": "patches/fastboot@4.1.0.patch"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@actions/core": "^1.2.6",
    "@actions/github": "^4.0.0",
    "@glimmer/component": "^1.1.2",
    "@glimmer/tracking": "^1.0.4",
    "@glint/core": "^0.9.7",
    "@glint/environment-ember-loose": "^0.9.7",
    "@glint/environment-ember-template-imports": "^0.9.7",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "ember-cli-htmlbars": "^6.1.0",
    "ember-resources": "^4.4.0",
    "ember-source": "~4.2.0",
    "ember-template-imports": "^3.0.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.7.1",
    "prettier-plugin-ember-template-tag": "^0.3.2",
    "hcl2-parser": "^1.0.3",
    "typescript": "^4.6.3"
  }
}
